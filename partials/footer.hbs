        <a href="https://eepurl.com/c-RpPr" rel="noopener" target="_blank">Join our mailing list</a>
      </div>
    </div>
    <nav class="footer-right">
      <div class="footer-col">
        <ul>
          <li>Links</li>
          <li><a href="{{ @site.url }}/faq" rel="noopener">FAQ</a></li>
